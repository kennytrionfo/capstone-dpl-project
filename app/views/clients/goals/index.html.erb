<div class="row">
    <div class="small-4 columns">
        <h2>Username and level go here</h2>
        <%=  %>
    </div>
    <div class="small-8 columns">
        <h2>Total points, titles/whatever goes here</h2>
        <div style="text-align: center" class="total"></div>
    </div>
</div>
  <br>
  <br>
  </br>


  <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
    <% @goals.each do |goal| %>
      <li class="card">
        <div class="row">
          <div class="small-8">
            <%= goal.category %>
          </div>
        <div class="small-4"><span class="point_value"><%= goal.point_value %></span> Value</div>
        </div>
        <div class="row">
          <div class="small-2">
            <select id="frequency">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="10">10</option>
              <option value="15">15</option>
              <option value="20">20</option>
            </select>
          </div>
          <div class="small-10">
            <h3>Times Per Week</h3>
          </div>
        </div>
        <div><span class="weekly_goal" id='<%= goal.id %>'><%= goal.weekly_points_goal %></span> Weekly Goal</div>
        <div><span class="weekly_results"><%= goal.weekly_results %></span> Weekly Results</div>
        <div>
        <a class="done" href="#" data-value="<%= goal.point_value %>"> Did it!</a>
      </div>
      </li>
    <% end %>
  </ul>

