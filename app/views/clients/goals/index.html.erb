<!doctype html>
<html class="no-js" lang="en">

<body>
    <div id="box-wrapper">


        <!-- Content wrapper and sticky menu trigger here  -->
        <div id="content-wrapper">
          <div class="row">
              <div class="small-4 columns">
                  <h2>Username and level go here</h2>
                  <%=  %>
              </div>
              <div class="small-8 columns">
                  <h2>Total points, titles/whatever goes here</h2>
                  <div style="text-align: center" class="total"></div>
              </div>
          </div>
            <br>
            <br>


            <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
              <% @goals.each do |goal| %>
                <li class="card">
                  <input type="hidden" class="goal_id" value="<%= goal.id %>">
                  <div>
                    <%= goal.category %>
                  </div>
                  <div><span class="point_value"><%= goal.point_value %></span> Value</div>
                  <div>
                    <h3>Time Per Week</h3>
                    <%= select_tag(:frequency, options_for_select([1, 2, 3, 4, 5, 10, 15, 20], selected: goal.frequency), id: nil, class: 'frequency-select') %>
                  </div>
                  <div><span class="weekly_goal" id='<%= goal.id %>'><%= goal.weekly_points_goal %></span> Weekly Goal</div>
                  <div><span class="weekly_results"><%= goal.weekly_results %></span> Weekly Results</div>
                  <div>
                  <a class="done" href="#" data-value="<%= goal.point_value %>"> Did it!</a>
                </div>
                </li>
              <% end %>
            </ul>
    </div>

</body>

</html>

