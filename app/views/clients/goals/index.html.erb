
<body>
  <h2>Daily Deeds Dashboard</h2>
  <!-- <form id="dashboardform" action="clients/goals" method="post"> -->
    <h4>Add your deeds and grow your points!</h4>
  <br>
  <br>
  <br>

    <div style="text-align: center" class="total"></div>
  </br>

  <table class="table">
    <thead>
      <tr>
        <th style="text-align:center">Catagory</th>
        <th style="text-align:center">Point Value</th>
        <th style="text-align:center">Frequency</th>
        <th style="text-align:center">Weekly Goal</th>
        <th style="text-align:center">Done!</th>
        <th style="text-align:center">Weekly Results</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @goals.each do |goal| %>
        <tr style="text-align:center">
          <td><%= goal.category %></td>
          <td class="point_value"><%= goal.point_value %></td>
          <td>
            <form action="">
              <select id="frequency">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
              </select>
            </form>
          </td>
          <td class="weekly_goal" id='<%= goal.id %>'> </td>
          <td><button id="done" value="<%= goal.point_value %>">Done!</button></td>
          <td id="weekly_results"> </td>
        </tr>

      <% end %>
    </tbody>
  </table>

